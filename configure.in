AC_ARG_ENABLE(debug,
	AS_HELP_STRING([--enable-debug], [Enable debug support in nucleus and debug symbols in programs]),
	[case "$enableval" in
	y | yes) debug_symbols=y ;;
	*) unset debug_symbols ;;
	esac])
AC_MSG_RESULT(${debug_symbols:-no})

