	[[0-9]]*) CONFIG_XENO_OPT_PIPE_NRDEV=$enableval ;;
	*) AC_MSG_ERROR([Bad argument to option: --enable-nucleus-pipe-nrdev=<number>]) ;;
	esac])
if test x$CONFIG_XENO_OPT_PIPE_NRDEV = x ; then
  # Use a reasonable default if unset
  CONFIG_XENO_OPT_PIPE_NRDEV=32
fi
AC_MSG_RESULT($CONFIG_XENO_OPT_PIPE_NRDEV)
XENO_PIPE_NRDEV=`expr $CONFIG_XENO_OPT_PIPE_NRDEV - 1`
if test x`expr $XENO_PIPE_NRDEV \< 0` = x1; then
   AC_MSG_ERROR([Bad argument to option: --enable-nucleus-pipe-nrdev=<number>])
fi
else
  # No pipe support
  XENO_PIPE_NRDEV=-1
fi

