dnl Process this file with autoconf to produce a configure script.
AC_PREREQ(2.59)

AC_INIT([Xenomai],m4_normalize(m4_include([config/version])),xenomai-help@gna.org)

CONFIG_XENO_VERSION_MAJOR=`expr $PACKAGE_VERSION : '\([0-9]*\)'`
CONFIG_XENO_VERSION_MINOR=`expr $PACKAGE_VERSION : '[0-9]*\.\([0-9]*\)'`
CONFIG_XENO_REVISION_LEVEL=`expr $PACKAGE_VERSION : '[0-9]*\.[0-9]*\.\([0-9]*\)'`
test "x$CONFIG_XENO_REVISION_LEVEL" = "x" && CONFIG_XENO_REVISION_LEVEL=0

AC_CONFIG_HEADERS(include/xeno_config.h)
AC_CONFIG_AUX_DIR(config/autoconf)
AC_CONFIG_SRCDIR(nucleus/module.c)
AC_PREFIX_DEFAULT(/usr/realtime)
AC_CANONICAL_BUILD
AC_CANONICAL_HOST
AC_PROG_INSTALL

AC_ARG_WITH(cc,
    AS_HELP_STRING([--with-cc=compiler],[use specific C compiler]),
    [
	case "$withval" in
	"" | y | ye | yes | n | no)
	    AC_MSG_ERROR([You must supply an argument to --with-cc.])
	  ;;
	esac
	CC="$withval"
    ])
AC_PROG_CC
CFLAGS=""

AC_PROG_CC_FOR_BUILD

AC_DEFINE_UNQUOTED(CONFIG_XENO_BUILD_STRING,"$build",[Build system alias])
XENO_BUILD_STRING="$build"
AC_DEFINE_UNQUOTED(CONFIG_XENO_HOST_STRING,"$host",[Host system alias])
XENO_HOST_STRING="$host"
AC_DEFINE_UNQUOTED(CONFIG_XENO_COMPILER,"`$CC -v 2>&1 | tail -n 1`",[Compiler])

AM_INIT_AUTOMAKE([foreign no-exeext dist-bzip2])
AM_MAINTAINER_MODE
AC_PROG_LIBTOOL
AM_PROG_AS
AM_PROG_LEX

arch_have_sim=

case "$host" in
 i*86*-*)
	XENO_TARGET_ARCH=i386
	wanted_kernel_arch=CONFIG_X86
	arch_have_sim=y
        ;;
 powerpc-*|ppc-*)
	XENO_TARGET_ARCH=ppc
	wanted_kernel_arch=CONFIG_PPC
	arch_have_sim=y
        ;;
 powerpc64-*|ppc64-*)
	XENO_TARGET_ARCH=ppc64
	wanted_kernel_arch=CONFIG_PPC64
	arch_have_sim=y
        ;;
 ia64-*)
	XENO_TARGET_ARCH=ia64
	wanted_kernel_arch=CONFIG_IA64
	arch_have_sim=y
        ;;
 *) echo ""
   echo "*******************************************"
   echo "Still unsupported host: $host -- Sorry."
   echo "*******************************************"
   echo ""
   exit 1;;
esac

dnl
dnl Load the configuration.
dnl

XENO_KCONFIG_FILE=$srcdir/arch/$XENO_TARGET_ARCH/defconfig
kconfig_type=default

AC_ARG_WITH(kconfig-file,
    AS_HELP_STRING([--with-kconfig-file=<kconfig-file>], [KConfig parameter file]),
    [
	case "$withval" in
	"" | y | ye | yes | n | no)
	    AC_MSG_ERROR([You must supply an argument to --with-kconfig-file.])
	  ;;
	esac
	XENO_KCONFIG_FILE="$withval"
	kconfig_type=supplied
    ])

AC_MSG_CHECKING([for Xenomai Kconfig file])
if test \! -f $XENO_KCONFIG_FILE; then
    AC_MSG_ERROR([Kconfig-file $XENO_KCONFIG_FILE not found -- --with-kconfig-file sets Kconfig file])
fi
. $XENO_KCONFIG_FILE
AC_MSG_RESULT([$XENO_KCONFIG_FILE ($kconfig_type)])

dnl
dnl Installation directory for modules
dnl

AC_MSG_CHECKING([for module installation directory])

AC_ARG_WITH(module-dir,
    AS_HELP_STRING([--with-module-dir=<module-dir>],[Installation directory for modules]),
    [
	case "$withval" in
	"" | y | ye | yes | n | no)
	    AC_MSG_ERROR([You must supply an argument to --with-module-dir.])
	  ;;
	esac
	XENO_MODULE_DIR="$withval"
    ])

top_builddir=`pwd`

dnl Are we building into the source tree?

dnl Set a default module dir if unspecified
if test "x" = "x$XENO_MODULE_DIR"
then
   XENO_MODULE_DIR='${exec_prefix}/modules'
else
   XENO_MODULE_DIR="`/bin/bash -c \"echo $XENO_MODULE_DIR\"`"
fi

AC_MSG_RESULT([$XENO_MODULE_DIR])

dnl A place to export module symbols
XENO_SYMBOL_DIR='${exec_prefix}/symbols'

dnl Determine whether we are building in the source tree; we will
dnl need this info later.
abs_srcdir=`cd "$srcdir" && pwd`
if test "$abs_srcdir" = $top_builddir; then
   CONFIG_XENO_OLD_FASHIONED_BUILD=y
else
   CONFIG_XENO_OLD_FASHIONED_BUILD=
fi

dnl
dnl Process the Linux kernel configuration
dnl

AC_MSG_CHECKING([for Linux build tree])

dnl CONFIG_MODULES has been forcibly set in Xenomai's configuration
dnl file, therefore we must unset it before later checking if the kernel
dnl actually defined it as required too.
unset CONFIG_MODULES

XENO_LINUX_DIR=$CONFIG_XENO_LINUXDIR

AC_ARG_WITH(linux-dir,
    AS_HELP_STRING([--with-linux-dir=<linux-dir>], 
                   [Adeos-enabled Linux kernel build tree]),
    [
	case "$withval" in
	"" )
	    if test x${CONFIG_XENO_LINUXDIR} = x; then
		AC_MSG_ERROR([You must supply an argument to --with-linux-dir.])
	    else
		withval=${CONFIG_XENO_LINUXDIR}
	    fi
	  ;;
	y | ye | yes | n | no)
	    AC_MSG_ERROR([You must supply an argument to --with-linux-dir.])
	  ;;
	esac
	XENO_LINUX_DIR="$withval"
    ])

if test x${XENO_LINUX_DIR} = x; then
   if test -f /lib/modules/`uname -r`/build/Makefile; then
        XENO_LINUX_DIR=/lib/modules/`uname -r`/build
   else
        echo
        AC_MSG_ERROR([Linux kernel tree not specified -- use --with-linux-dir])
   fi
else
   XENO_LINUX_DIR="`/bin/bash -c \"echo $XENO_LINUX_DIR\"`"
fi
XENO_LINUX_DIR=`cd "$XENO_LINUX_DIR" 2>/dev/null && pwd \
                || echo "$XENO_LINUX_DIR"`

if test \! -r ${XENO_LINUX_DIR}/Makefile; then
   echo
   AC_MSG_ERROR([No Linux kernel build tree in ${XENO_LINUX_DIR}])
fi

dnl XENO_LINUX_DIR contains the Linux kernel build tree, try to deduce the
dnl kernel source tree from the build directory top Makefile from the variable
dnl KERNELSRC defined there. If this variable is not defined, we suppose that
dnl the kernel was built in its source tree.
XENO_LINUX_SRCDIR=`sed -e 's,KERNELSRC *:= *\(.*\)$,\1,;t;d' \
        "${XENO_LINUX_DIR}/Makefile"`
test -z "$XENO_LINUX_SRCDIR" && XENO_LINUX_SRCDIR="${XENO_LINUX_DIR}"
eval linux_`grep '^EXTRAVERSION =' $XENO_LINUX_SRCDIR/Makefile | sed -e 's, ,,g'`
eval linux_`grep '^PATCHLEVEL =' $XENO_LINUX_SRCDIR/Makefile | sed -e 's, ,,g'`
eval linux_`grep '^SUBLEVEL =' $XENO_LINUX_SRCDIR/Makefile | sed -e 's, ,,g'`
eval linux_`grep '^VERSION =' $XENO_LINUX_SRCDIR/Makefile | sed -e 's, ,,g'`

dnl Load Linux kernel configuration now, before config symbols are tested.
if test \! -r ${XENO_LINUX_DIR}/.config; then
   AC_MSG_RESULT([invalid])
   AC_MSG_ERROR([$XENO_LINUX_DIR is not configured -- --with-linux-dir sets linux-dir])
fi

. $XENO_LINUX_DIR/.config

XENO_LINUX_VERSION="$linux_VERSION.$linux_PATCHLEVEL.$linux_SUBLEVEL$linux_EXTRAVERSION"
AC_MSG_RESULT([$XENO_LINUX_DIR (kernel ${XENO_LINUX_VERSION}${CONFIG_SMP:+-SMP})])

AC_MSG_CHECKING([for Linux source tree])
AC_MSG_RESULT([$XENO_LINUX_SRCDIR])

dnl
dnl Check for an interrupt pipeline extension.
dnl

AC_MSG_CHECKING([for interrupt pipeline extension])

if test -r $XENO_LINUX_SRCDIR/include/linux/ipipe.h; then
   v=`grep '^#define.*IPIPE_ARCH_STRING.*"' $XENO_LINUX_SRCDIR/include/linux/ipipe.h|sed -e 's,.*"\(.*\)"$,\1,'`
   AC_MSG_RESULT([Adeos newgen (I-pipe $v)])
   if test x${CONFIG_IPIPE} = x; then
      AC_MSG_ERROR([Please activate the Adeos support in $XENO_LINUX_DIR and rebuild your kernel])
   fi
   if test x${CONFIG_IPIPE_EXTENDED} = x; then
      AC_MSG_ERROR([Please re-patch your kernel with the Adeos support])
   fi
elif test -r $XENO_LINUX_SRCDIR/include/linux/adeos.h; then
   v=`grep '^#define.*ADEOS_ARCH_STRING.*"' $XENO_LINUX_SRCDIR/include/asm-*/adeos.h|sed -e 's,.*"\(.*\)"$,\1,'`
   AC_MSG_RESULT([Adeos oldgen ($v)])
   if test x${CONFIG_ADEOS_CORE} = x; then
      AC_MSG_ERROR([Please activate the Adeos support in $XENO_LINUX_DIR and rebuild your kernel])
   fi
else
   AC_MSG_ERROR([No interrupt pipeline extension enabled in your kernel.
	You need to apply an Adeos patch first.])
fi

dnl
dnl We need Linux 2.6.
dnl

case "$XENO_LINUX_VERSION" in
  2.6.*)
    ;;
  *) 
    AC_MSG_ERROR([Unsupported kernel version $XENO_LINUX_VERSION])
esac

dnl
dnl Perform a few sanity checks.
dnl

arch_select=`eval echo \\$$wanted_kernel_arch`
if test x$arch_select = x; then
   echo
   echo "************************************************************"
   echo " The target Xenomai architecture ($XENO_TARGET_ARCH) does not match"
   echo " the kernel architecture selected in $XENO_LINUX_DIR"
   echo " (i.e. $wanted_kernel_arch is undefined)"
   echo "************************************************************"
   exit 1
fi

if test x${CONFIG_MODULES} = x ; then
  AC_MSG_ERROR([Please set CONFIG_MODULES for $XENO_LINUX_DIR and rebuild your kernel])
fi

CONFIG_XENO_LINUXDIR=$XENO_LINUX_DIR

dnl Some sanity checks again. We are only rearranging defaults and
dnl discarding preposterous settings here, previous user selection
dnl is kept as long as it is sane.

if test "$CONFIG_X86" = y; then
   if test x$CONFIG_X86_EMU486 = x -a x$CONFIG_X86_CMPXCHG = x; then
       AC_MSG_ERROR([Xenomai won't work on legacy i386 platforms (cmpxchg() is missing, need >= CONFIG_M486)])
   fi
   if test x$CONFIG_X86_WP_WORKS_OK = x; then
      AC_MSG_ERROR([Xenomai won't work on legacy i386 platforms (cannot rely on WP bit, need >= CONFIG_M486)])
   fi
fi

dnl Extract GCC architecture specific flags from KBUILD Makefiles.

AC_MSG_CHECKING(for GCC architecture specific flags)
mkdir -p .xeno_display_archflags
cat > .xeno_display_archflags/display_archflags.c <<EOF
#include <stdio.h>
int main(void)
{
    char *str = XENO_CFLAGS;
    printf("%s\n", str);
    return 0;
}
EOF
cat > .xeno_display_archflags/Makefile <<EOF
hostprogs-y := display_archflags
always := display_archflags

HOST_EXTRACFLAGS += -DXENO_CFLAGS="\"\$(CFLAGS)\""
EOF
make -s -C $XENO_LINUX_DIR CC=$CC ARCH=$XENO_TARGET_ARCH \
        CROSS_COMPILE=$CROSS_COMPILE M=$PWD/.xeno_display_archflags >& /dev/null
for flag in `.xeno_display_archflags/display_archflags`; do case $flag in
    -march*|-mcpu*|-mtune*|-Wa,-me500|-EB|-EL)
        XENO_ARCH_FLAGS="$XENO_ARCH_FLAGS $flag";;
    *);; 
esac; done
rm -Rf .xeno_display_archflags
AC_MSG_RESULT(${XENO_ARCH_FLAGS:-none})

AC_MSG_CHECKING(for pervasive real-time support in user-space)
AC_ARG_ENABLE(full,
	AS_HELP_STRING([--enable-pervasive], [Enable pervasive real-time support in user-space]),
	[case "$enableval" in
	y | yes) CONFIG_XENO_OPT_PERVASIVE=y ;;
